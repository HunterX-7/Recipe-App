<div class ="container">
<h1 class="display-5 text-center">Shopping List</h1>
<table class="table table-striped table-hover mt-3">
  <thead>
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Total</th>
    </tr>
  </thead>
  <tbody>
    <% total_price = 0 %>
    <% @shopping_list.each do |food, details| %>
      <% total_price += details[:price] * details[:quantity] %>
      <tr>
        <td><%= food %></td>
        <td><%= details[:quantity] %></td>
        <td><%= number_to_currency(details[:price]) %></td>
        <td><%= number_to_currency(details[:price] * details[:quantity]) %></td>
      </tr>
    <% end %>
    <tr>
      <td></td>
      <td></td>
      <td></td>
      <td><b><%= number_to_currency(total_price) %></b></td>
    </tr>
  </tbody>
</table>
</div>
