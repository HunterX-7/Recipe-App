<div class="container">
  <h1 class="display-4">Public Recipes</h1>
  <ul class="list-group">
    <% @recipes.each do |recipe| %>
      <li class="list-group-item d-flex justify-content-between">
        <div class="col-4">
          <%= link_to recipe.name, recipe_path(recipe.id), class: "text-decoration-none text-dark fw-bold me-3" %>
          <p class="mb-0">By: <%= recipe.user.name %></p>
        </div>
        <div class="col-7">
          <p class="mb-0"><%= recipe.description %></p>
        </div>
        <div class="col-1">
          <%= button_to "Remove", recipe, method: :delete, class: "btn btn-danger btn-sm", data: { turbo_confirm: "Are you sure you want to delete this recipe?" } %>
        </div>
      </li>
    <% end %>
  </ul>
</div>
