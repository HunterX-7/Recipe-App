<h1>Foods</h1>

<%= link_to "Add Food", new_food_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Measurement Unit</th>
      <th>Price</th>
      <th>Quantity</th>
    </tr>
  </thead>
  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.measurement_unit %></td>
        <td><%= food.price %></td>
        <td><%= food.quantity %></td>
        <td><%= button_to "Delete", food, method: :delete, data: { turbo_confirm: "Are you sure you want to delete this food?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
