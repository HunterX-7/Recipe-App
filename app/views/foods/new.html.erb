<h1>Add Food</h1>

<%= form_with(model: @food, url: foods_path, local: true) do |form| %>
    <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name %>
    </div>

    <div class="field">
    <%= form.label :measurement_unit %>
    <%= form.select :measurement_unit, options_for_select(['lbs', 'kgs'], selected: 'lbs') %>
    </div>

    <div class="field">
        <%= form.label :price %>
        <%= form.number_field :price %>
    </div>

    <div class="field">
        <%= form.label :quantity %>
        <%= form.number_field :quantity %>
    </div>

    <div>
    <%= form.submit "Add Food"%>
    </div>
<% end %>
